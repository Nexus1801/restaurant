<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_kitchen_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Order Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_kitchen_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #123"
                    android:textColor="#111827"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kitchen_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Table 5"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Time Elapsed -->
            <TextView
                android:id="@+id/tv_time_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min ago"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#374151" />

        </LinearLayout>

        <!-- Order Items -->
        <TextView
            android:id="@+id/tv_kitchen_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Items: Burger (x2), Fries (x1)"
            android:textColor="#374151"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Status and Action Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_kitchen_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3B82F6"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Placed"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_kitchen_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Preparing"
                android:textSize="12sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>